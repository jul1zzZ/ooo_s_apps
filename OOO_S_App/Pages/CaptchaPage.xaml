<Page x:Class="OOO_S_App.Pages.CaptchaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OOO_S_App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CaptchaPage" Style="{StaticResource base_page}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Image Name="CaptchaImage" Source="{Binding CaptchaPath}" Width="480" Height="200" />
        <TextBox Name="CaptchaTb" Grid.Row="1" VerticalAlignment="Center" FontSize="30" Width="300"/>
        <Button Name="CheckCaptcha" Click="CheckCaptcha_Click" Content="OK" Grid.Row="2" Style="{StaticResource ButtonRadius}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
